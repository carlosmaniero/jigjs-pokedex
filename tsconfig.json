{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es6",
      "es2019"
    ],
    "target": "ES2015",
    "moduleResolution": "node"
  },
  "exclude": [
    "**/*.spec.ts",
    "/node_modules/"
  ],
  "include": [
    "./**/*.ts",
    "/node_modules/**/*.d.ts"
  ]
}
